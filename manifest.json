{
  "manifest_version": 3,
  "name": "Drafty",
  "version": "1.0.0",
  "description": "Fantasy Football Draft Assistant",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://fantasy.espn.com/*",
    "https://football.fantasysports.yahoo.com/*",
    "https://sleeper.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://fantasy.espn.com/football/draft*",
        "https://football.fantasysports.yahoo.com/draftclient/*",
        "https://sleeper.com/draft/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": [
        "https://fantasy.espn.com/*",
        "https://football.fantasysports.yahoo.com/*",
        "https://sleeper.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Drafty"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}